#!/bin/sh

# shellcheck source=src/nextcloud/utilities/nextcloud-utilities
. "$SNAP/utilities/nextcloud-utilities"

printf "Waiting for Nextcloud config dir... "
while [ ! -d "$NEXTCLOUD_CONFIG_DIR" ]; do
	sleep 1
done

printf "done\n"

while true; do
	run-php "$SNAP/htdocs/cron.php"
	sleep 15m
done
